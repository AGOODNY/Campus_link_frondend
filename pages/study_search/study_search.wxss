/* ========== 瀑布流样式 ========== */
.waterfall-wrapper {
  width: 660rpx;
  margin: 0 auto;
  padding: 0rpx 0 40rpx 0;
  display: flex;
  box-sizing: border-box;
 /* border: 2rpx solid red;*/
  background: #F3F4F5;
}

/* 每列宽度计算： (660rpx - 20rpx间距) ÷ 2 = 320rpx */
.waterfall-column {
  width: 320rpx;
  display: flex;
  flex-direction: column;
  /*border: 2rpx solid blue;*/
}

/* 左列加右边距 */
.waterfall-column.left {
  margin-right: 20rpx;
  background-color: #F3F4F5;
}

.waterfall-column.right {
  background: #F3F4F5;
}

/* 帖子卡片样式 */
.post-item {
  margin-bottom: 20rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  width: 100%; /* 占满列宽 */
  box-sizing: border-box;
}

.post-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 图片区域 - 调整为适合320rpx宽度 */
.post-image-wrapper {
  position: relative;
  width: 100%;
  height: 0;
  padding-bottom: 133.33%; /* 3:4 比例 (320:426.67)，更适配窄列 */
  overflow: hidden;
  background: #f5f5f5;
}

.post-image {

  opacity: 1 !important;
  visibility: visible !important;
   
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s;
}

.post-image-wrapper:active .post-image {
  transform: scale(1.05);
}

/* 内容区域 */
.post-info {
  padding: 20rpx; /* 减小内边距以适应窄列 */
  box-sizing: border-box;
}

/* 标题 - 调整字体大小适应窄列 */
.post-title {
  font-size: 30rpx; /* 稍微减小字号 */
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 12rpx;
}

/* 描述 */
.post-desc {
  font-size: 26rpx; /* 稍微减小字号 */
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 20rpx;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.user-avatar {
  width: 40rpx; /* 减小头像大小 */
  height: 40rpx;
  border-radius: 50%;
  margin-right: 12rpx;
  border: 1rpx solid #f0f0f0;
}

.user-name {
  flex: 1;
  font-size: 26rpx; /* 减小字号 */
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.post-time {
  font-size: 22rpx; /* 减小字号 */
  color: #999;
  margin-left: 12rpx;
  white-space: nowrap;
}

/* 互动数据 */
.post-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  align-items: center;
  font-size: 24rpx; /* 减小字号 */
  color: #666;
}

.stat-item:first-child {
  margin-right: 24rpx;
}