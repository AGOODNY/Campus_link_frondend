/* pages/problem/problem.wxss */
page {
  background-color: #f5f6f7;
}

.page {
  padding: 20rpx;
}

/* 我的问题 */
.my-question {
  position: relative;
  height: 300rpx;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.my-question-img {
  width: 100%;
  height: 100%;
}

.my-question-mask {
  position: absolute;
  inset: 0;
  background-color: rgba(0, 0, 0, 0.35);
  display: flex;
  align-items: center;
  justify-content: center;
}

.my-question-text {
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
}

/* 问题列表 */
.card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

/* 用户信息 */
.user {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.nickname {
  font-size: 26rpx;
  color: #555;
}

/* 问题描述 */
.content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 10rpx;

  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 问题图片 */
.img {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
}
