
.page-content {
    padding-bottom: 120rpx; /* 留出评论框高度 */
  }
  

.container {
    padding: 20rpx;
    background-color: #fff;
    border-radius: 16rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 头部用户信息 */
.header {
    display: flex;
    align-items: center;
    margin-bottom: 24rpx;
}

.avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background-color: #f5f5f5;
}

.username {
    margin-left: 20rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
}

/* 内容区域 */
.content {
    margin-bottom: 24rpx;
    width:100%;
}

/* 帖子标题 */
.post-title {
    display: block;
    font-size: 42rpx;
    font-weight: bold;
    color: #333;
    margin-top: 12rpx;
    margin-bottom: 20rpx;
    line-height: 1.4;
    text-align: left; /* 左对齐 */
}

/* 自适应图片高度方案 */
/* 修改图片容器 */
.image-container {
    width: 100%;
    max-height: 720rpx;        /* 最大高度 */
    overflow: hidden;          /* 超出部分隐藏 */
    border-radius: 12rpx;
    background-color: #f2f2f2; /* 图片不够宽时的填充色 */
    display: flex;
    justify-content: center;   /* 水平居中 */
}


.post-image {
    width: 100%;
    height: auto;
    display: block;
}


/* 正文内容 */
.post-text {
    
    display: block;
    font-size: 32rpx;
    color: #333;
    line-height: 1.6;
    padding-top: 12rpx;
    text-align: left; /* 左对齐 */
    word-break: break-word; /* 自动换行 */
}

/* 标签 */
.tags {
    
    display: block;
    font-size: 26rpx;
    color: #666;
    text-align: left;
    margin-top: 12rpx;
    line-height: 1.6;
}

.detail{
    width:100%;
    border-bottom: rgba(0, 0, 0, 0.08);
}




.actions {
    width: 40%;
    display: flex;              /* ★ 必须 */
    justify-content: center;
    align-items: center;
    padding-top: 24rpx; 
}


.action-btn {
    
    background-color: transparent !important;
    display: flex;
    left: 2rpx;
    gap:0;
    padding: 4rpx 4rpx; 
    font-size: 28rpx;
    margin: 0;
    
}


.action-btn::after {
    border: none;
}

/* 所有图片图标统一大小 */
.action-btn image {
   
    width: 32rpx;
    height: 32rpx;
    margin-right: 8rpx;
    display: block; /* 确保作为块元素 */
}

/* icon 组件统一大小 */
.action-btn icon {
   
    height: 32rpx;
    margin-right: 8rpx;

}

/* 数字样式 */
.action-btn .count {
    font-size: 28rpx;
    color: #666;
    margin-left: 4rpx; 
}

/* 评论输入框容器 */
.comment-input-container {
    padding: 28rpx 32rpx 12rpx 4rpx; /* 上右下左 */
    box-sizing: border-box;
  }

  .comment-input-fixed {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
  
    padding-bottom: env(safe-area-inset-bottom);
    background-color: #fff;
    z-index: 999;
    border-top: 2rpx solid #f0f0f0;
  }
  
  
  /* 评论输入框主体 */
  .comment-input-box {
    width: 680rpx;
    height: 80rpx;
    background-color: rgba(243,249,255,1);
    border-radius: 16rpx;
    margin: 0 auto; /* 水平居中 */
    display: flex;
    align-items: center;
    padding: 0 24rpx;
    box-sizing: border-box;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  }
  
  /* 评论图标 */
  .comment-input-icon {
    width: 32rpx;
    height: 32rpx;
    margin-right: 16rpx;
    opacity: 0.6;
  }
  
  /* 评论输入框 */
  .comment-input {
    flex: 1;
    font-size: 28rpx;
    color: #333;
    background-color: transparent;
  }
  

  .comment-section {
    padding: 24rpx;
  }
  
  .comment-title {
    font-size: 28rpx;
    color: #333;
    font-weight: bold;
    margin-bottom: 16rpx;
  }
  
  .comment-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 32rpx;
   
  }
  
  .comment-avatar {
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
    margin-right: 16rpx;
  }
  
  .comment-content {
    flex: 1;
  }
  
  .comment-nickname {
    display:block;
    font-size: 26rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 4rpx;
  }
  
  .comment-text {
    display: block;
    font-size: 26rpx;
    color: #555;
    margin-top: 6rpx;
    line-height: 1.5;
  }
  


/* 发送按钮 */
.send-btn {
    margin-bottom: 32rpx;
    margin-left: 16rpx;
    font-size: 28rpx;
    color: #1e90ff
}


