/* pages/setting/setting.wxss */  
.avatar {
  background-color: transparent;
}
.avatar::after {
  border: none;
}

.title {
  margin:20px 10px;
}

.pic {
  height: 250rpx;
  width: 250rpx;
  border-radius: 50%;
}

.input {
  width: auto;
  height: 88rpx;
  padding: 10rpx 30rpx;
  box-sizing: border-box;

  background-color: #ffffff;
  border-radius: 16rpx;
  border: 1rpx solid #e5e5e5;
  margin: 10rpx 10rpx;

  font-size: 30rpx;
  color: #333;
}


.submit {
  border-radius: 80rpx;
  margin-top: 80rpx;
}

/* ===== 状态标签 ===== */
.status {
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #fff;
}

/* pending */
.status.pending {
  background: #faad14;
}

/* accepted */
.status.accepted {
  background: #1890ff;
}

/* resolved */
.status.resolved {
  background: #52c41a;
}
