/* pages/register/register.wxss */

.container {
  min-height: 100vh;
  background: #f2f4f7;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.card {
  width: 630rpx;
  background: #ffffff;
  padding: 60rpx;
  border-radius: 26rpx;
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.08);
  text-align: left;
}

.title {
  width: 100%;
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  text-align: center;
  margin-bottom: 45rpx;
}

.label {
  font-size: 26rpx;
  color: #555;
  margin-bottom: 14rpx;
  display: block;
}

.input {
  width: 100%;
  height: 76rpx;
  padding: 12rpx 22rpx;
  font-size: 28rpx;
  background: #f7f8fa;
  border-radius: 14rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

/* 角色选择样式 */
.radio-box {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}
.radio-item {
  font-size: 28rpx;
  color: #555;
  display: flex;
  align-items: center;
}

/* 底部按钮行 */
.btn-row {
  margin-top: 40rpx;
  width: 650rpx;
  display: flex;
  justify-content: space-between;
}

.btn-primary {
  width: 300rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 44rpx;
  background: #1e90ff;
  color: white;
  font-size: 30rpx;
  font-weight: 600;
}

.btn-outline {
  width: 300rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 44rpx;
  background: white;
  border: 2rpx solid #1e90ff;
  color: #1e90ff;
  font-size: 30rpx;
  font-weight: 600;
}
