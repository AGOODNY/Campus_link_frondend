<!-- pages/register/register.wxml -->
<view class="container">
  <view class="card">
    <text class="title">Register</text>

    <text class="label">Account</text>
    <input class="input" placeholder="Enter account" bindinput="onUsername" />

    <text class="label">Password</text>
    <input class="input" placeholder="Enter password" password bindinput="onPassword" />

    <text class="label">Role</text>
    <radio-group class="radio-box" bindchange="onRoleChange">
      <label class="radio-item">
        <radio value="student" /> Student
      </label>
      <label class="radio-item">
        <radio value="staff" /> Staff
      </label>
    </radio-group>
  </view>

  <view class="btn-row">
    <button class="btn-primary" bindtap="register">Confirm</button>
    <button class="btn-outline" bindtap="gotoLogin">Login</button>
  </view>
</view>
