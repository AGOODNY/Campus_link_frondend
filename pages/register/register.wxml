<view class="container">
  <view class="form-box">
    <text class="label">Account</text>
    <input placeholder="Enter username" bindinput="onUsername" />

    <text class="label">Password</text>
    <input placeholder="Enter password" password bindinput="onPassword" />

    <text class="label">Role</text>
    <radio-group bindchange="onRoleChange">
      <label><radio value="student" /> Student</label>
      <label><radio value="staff" /> Staff</label>
    </radio-group>

    <button bindtap="register">Register</button>
    <button class="link" bindtap="gotoLogin">Already have an account?</button>
  </view>
</view>
