page {
  background-color: #f5f6f7;
}

.profile {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0 40rpx;
  background-color: #ffffff;
}

.avatar {
  width: 250rpx;
  height: 250rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 40rpx;
  font-weight: 450;
  color: #333;
}

.myPost,
.history,
.setting {
  margin: 30rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
}

.myPost button,
.history button,
.setting button {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: left;
  padding: 0 40rpx;
  background-color: #ffffff;
  border: none;
  font-size: 30rpx;
  color: #333;
}

button::after {
  border: none;
}
