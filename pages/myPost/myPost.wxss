page {
  background-color: #f5f6f7;
}

/* 页面整体 */
.page {
  padding: 20rpx;
}

.empty {
  margin-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.head{
  font-size: 40rpx;
  margin:10rpx 0;
}

/* 瀑布流容器 */
.waterfall {
  display: flex;
  justify-content: space-between;
}

/* 每一列 */
.column {
  width: 48%;
}

/* 卡片 */
.card {
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

/* 帖子首图 */
.cover {
  width: 100%;
  border-radius: 20rpx 20rpx 0 0;
}

/* 内容区 */
.content {
  padding: 20rpx;
}

/* 标题 */
.title {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 16rpx;

  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 用户信息 */
.user {
  display: flex;
  align-items: center;
}

/* 用户头像 */
.avatar {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

/* 昵称 */
.nickname {
  font-size: 24rpx;
  color: #666;
}
