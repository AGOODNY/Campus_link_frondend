/* pages/post/post.wxss */
page {
  background-color: #f5f6f7;
}

.page {
  padding: 20rpx;
}

.card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}

/* 分区按钮 */
.section-btns,
.sub-btns {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
  margin-bottom: 15rpx;
}

.section-btn {
  padding: 18rpx 36rpx;
  border-radius: 40rpx;
  background-color: #f0f0f0;
  font-size: 28rpx;
}

.sub-btn {
  padding: 14rpx 30rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
  font-size: 26rpx;
}

.active {
  background-color: #1e90ff;
  color: #fff;
}

/* 输入 */
.input {
  height: 88rpx;
  font-size: 30rpx;
}

.textarea {
  min-height: 200rpx;
  font-size: 30rpx;
}

/* 图片 */
.img-list {
  display: flex;
  flex-wrap: wrap;
}

.img,
.img-add {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.img-add {
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: #999;
}

/* 发布按钮 */
.submit {
  margin-top: 40rpx;
  background-color: #1e90ff;
  color: #fff;
  border-radius: 50rpx;
}

.submit.disabled {
  background-color: #ccc;
}
