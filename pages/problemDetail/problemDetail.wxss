/* pages/problemDetail/problemDetail.wxss */
/* 页面背景 */
.page {
  background: #f5f6f7;
  padding: 24rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 通用卡片 */
.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* ===== 问题头部 ===== */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.user {
  display: flex;
  align-items: center;
}

.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background: #eee;
}

.nickname {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

/* ===== 状态标签 ===== */
.status {
  /* 关键修复：设置内联块级显示 */
  display: inline-block;
  
  /* 确保有足够内边距包裹文字 */
  padding: 8rpx 20rpx;
  
  /* 圆角效果 */
  border-radius: 24rpx;
  
  /* 文字样式 */
  font-size: 24rpx;
  color: #fff;
  
  /* 可选：确保标签不换行 */
  white-space: nowrap;
  
  /* 可选：垂直居中文字 */
  line-height: 1;
  
  /* 可选：最小宽度确保标签美观 */
  min-width: 80rpx;
  text-align: center;
}

.status.pending {
  background: #faad14;
}

.status.accepted {
  background: #1890ff;
}

.status.resolved {
  background: #52c41a;
}

/* ===== 内容 ===== */
.content {
  font-size: 28rpx;
  line-height: 44rpx;
  color: #333;
  margin-bottom: 16rpx;
}

/* ===== 图片列表 ===== */
.img-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 12rpx;
}

.img-list image {
  width: 31%;
  height: 200rpx;
  margin-right: 3.5%;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  background: #f0f0f0;
}

.img-list image:nth-child(3n) {
  margin-right: 0;
}

/* ===== 时间 ===== */
.time {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #999;
}

/* ===== 分段标题 ===== */
.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin: 24rpx 0 12rpx;
}

/* ===== 回复列表 ===== */
.reply-item {
  border-bottom: 1rpx solid #f0f0f0;
  padding: 16rpx 0;
}

.reply-item:last-child {
  border-bottom: none;
}

.reply-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.reply-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #1890ff;
}

.reply-time {
  font-size: 22rpx;
  color: #999;
}

.reply-content {
  font-size: 26rpx;
  color: #333;
  line-height: 40rpx;
}

/* ===== 无回复 ===== */
.empty {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  padding: 32rpx 0;
}

/* ===== 表单输入 ===== */
textarea {
  width: 100%;
  min-height: 180rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 26rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

/* ===== 按钮 ===== */
button {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  background: #1890ff;
  color: #fff;
}

button::after {
  border: none;
}

/* 上报按钮 */
.report-btn {
  margin-top: 16rpx;
  background: #fa541c;
}

/* 解决按钮 */
.solve-btn {
  margin-top: 16rpx;
  background: #52c41a;
}

